# Required
OPENAI_API_KEY=your-openai-api-key-here
ALLOWED_DOMAINS=https://your-docusaurus-site.com,http://localhost:3000

# Optional
PORT=3000
NODE_ENV=production
RATE_LIMIT=30  # Requests per minute

# GitHub Integration (Optional)
GITHUB_TOKEN=your-github-personal-access-token  # For searching issues and discussions

# reCAPTCHA Configuration (Optional but recommended)
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key-here  # Get from https://www.google.com/recaptcha/admin/
RECAPTCHA_SCORE_THRESHOLD=0.5  # Minimum score to accept (0.0-1.0, where 1.0 is most likely human)

# Stage 3: Fine-Tuned Model Enhancement (Optional)
FINE_TUNED_MODEL_ID=  # Optional: Your fine-tuned model ID (e.g., ft:gpt-3.5-turbo:org-id:model-name:id)
ENABLE_RECURSIVE_SEARCH=false  # Enable recursive document enhancement
MAX_RECURSION_DEPTH=2  # Maximum recursion depth for enhancement
RECURSION_TIMEOUT=5000  # Timeout for recursive calls in milliseconds

# Discourse Integration (Optional)
DISCOURSE_API_KEY=your-discourse-specific-api-key-here  # API key for Discourse integration
DISCOURSE_RATE_LIMIT=10  # Requests per minute for Discourse endpoint (default: 10)
DISCOURSE_CACHE_TTL=3600  # Cache TTL in seconds (default: 3600 = 1 hour)
DISCOURSE_MAX_RESPONSE_LENGTH=1500  # Maximum response length in tokens (default: 1500)

# Algolia Configuration (for Discourse integration)
